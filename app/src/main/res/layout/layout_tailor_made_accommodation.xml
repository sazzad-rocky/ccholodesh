<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="170dp"
    android:layout_height="180dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/drawable_border_around"
    android:id="@+id/foodlistparent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id = "@+id/foodimage"
            android:layout_weight="1.1"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@drawable/tourdeflt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#7d000000"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Category"
                android:textColor="@color/ms_white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/occupancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Max Occupancy : "
                android:textColor="@color/ms_white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Hotel "
                android:textColor="@color/ms_white"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="District"
                android:textColor="@color/ms_white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:gravity="center"
                android:text="in"
                android:textColor="@color/ms_white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="out"
                android:textColor="@color/ms_white"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/price"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-medium"
        android:text="Price : "
        android:background="#ffa027"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp" />


    <!--</LinearLayout>-->




</LinearLayout>
