<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/packageParent"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:orientation="vertical"

            android:background="@drawable/drawable_border_around"
            >
            

                <TextView
                    android:id="@+id/emergenyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N/A"

                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/ms_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/organizationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:gravity="center"
                    android:textColor="@color/ms_black"
                    android:layout_margin="5dp"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/dayNight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ms_black"

                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="N/A"
                    android:gravity="center"
                    android:textColor="@color/ms_black"

                     />


        </LinearLayout>

        <TextView
            android:id="@+id/contactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:background="@drawable/border_transport"
            android:textColor="#ffffff"

            android:text="N/A "/>



        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/hotline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="N/A"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/border_transport"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>


