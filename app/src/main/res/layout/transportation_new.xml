<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/transport_image"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id = "@+id/linearlayout"
                android:orientation="vertical"
                android:background="#eeeeee">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    >

                    <TextView
                        android:id="@+id/chooseRouteforLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Choose Route" />

                    <!--<ExpandableListView-->
                    <!--android:id = "@+id/chooseRoute"-->
                    <!--android:layout_width="300dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_marginTop="9dp" />-->
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:id = "@+id/cRoute">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:id="@+id/chooseTransportTypeforLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"

                        android:text="Transport Type" />

                    <!--<ExpandableListView-->
                    <!--android:id = "@+id/transportType"-->
                    <!--android:layout_width="300dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_marginTop="9dp" />-->
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:id = "@+id/transportType">

                    </Spinner>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:id="@+id/chooseTransportNameforLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="Transport Name" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id = "@+id/transportName"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp">

                    </Spinner>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:id="@+id/chooseTransportCtgryforLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="Transport Category" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:id = "@+id/transportCategory"
                        android:layout_marginTop="5dp">

                    </Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background= "@drawable/drawable_border_around"
                        android:alpha="1"
                        android:padding="20dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/IntrroutesforLang"
                            android:textSize="16dp"

                            android:text="INTER ROUTES"
                            android:textStyle="bold"
                            android:textColor="#000000"/>

                        <!--Some thing will be here tags-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id = "@+id/interRoutes"
                            android:textSize="16dp"

                            android:textColor="#000000"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/totaltripforLang"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:text="TOTAL TRIP: "/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id = "@+id/totalTrip"

                                android:textColor="#000000"
                                android:gravity="center_vertical"
                                android:textSize="16dp"
                                android:text="5"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"


                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:textColor="#000000"
                                    android:id="@+id/firsttripforLang"
                                    android:text="FIRST TRIP:  "/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"

                                    android:textSize="16dp"
                                    android:textColor="#000000"
                                    android:id= "@+id/firstTrip"
                                    android:gravity="center"
                                    android:text="08:00 AM"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:id="@+id/lasttripforLang"
                                    android:textSize="16dp"
                                    android:text="LAST TRIP:   "/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id= "@+id/lastTrip"
                                    android:textSize="16dp"
                                    android:textColor="#000000"

                                    android:gravity="center"
                                    android:text="08:00 AM"/>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/estimatedtimeforLang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:text="ESTIMATED TIME: "/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id ="@+id/estimatedTime"
                                android:textSize="16dp"
                                android:textColor="#000000"
                                android:text="9 hrs"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"

                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fareforLang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:text="FARE: "/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22dp"
                                android:id ="@+id/fare"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:text=""/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>